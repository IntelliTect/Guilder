@using Guilder.Shared;
@using System.Globalization;

<div class="card">
    <div class="float-end" style="float: right">
        @(RoomName)
    </div>
    @if (Meeting != null)
    {
        <h1 style="font-size: 6vh"><span class="red-color">@Meeting.Name</span></h1>
        <p style="font-size: 2vh">Meeting Details:</p>
        <p style="font-size: 3vh">@Meeting.StartTimeInclusive.InZone(DateTimeZoneProviders.Tzdb.GetSystemDefault()).ToString("HH:mm", CultureInfo.InvariantCulture) - @Meeting.EndTimeExclusive.InZone(DateTimeZoneProviders.Tzdb.GetSystemDefault()).ToString("HH:mm", CultureInfo.InvariantCulture)</p>
        <p style="font-size: 3vh">@Meeting.Description</p>
    }
    else
    {
        <h1><span class="green-color">Meeting Room Is Currently Free</span></h1>
    }

</div>

@code {
    [Parameter]
    public Meeting? Meeting { get; set; }

    [Parameter]
    public string RoomName { get; set; }
}
